<div class="row">
  <aside class="span6 offset3">
    <h1>New Photo</h1>
    <h2>Image file is uploaded through the server</h2>
    <%= form_for(@photo, :url => photos_path) do |f| %>
        <%= f.label :title, "Title:" %>
        <%= f.text_field :title %>
        <%= f.label :image, "Image:" %>
        <%= f.file_field :image %>
        <%= f.hidden_field(:image_cache) %>
        <%= f.submit "Submit Photo" %>
        <% if @error %><span class="error"><%= @error %></span><% end %>
      <%= hidden_field_tag :direct, params[:direct] %>
    <% end %>
  </div>

  <a href="<%= photos_path %>" class="back_link">Back to list</a>
</div>
